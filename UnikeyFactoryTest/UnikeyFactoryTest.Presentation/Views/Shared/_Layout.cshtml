<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/styles.css")
    @Scripts.Render("~/Content/Scripts/scripts.js")
</head>
<body>
<div id="cover-spin"></div>
<div id="renderDiv" class="container body-content">
    <div id="mySidenav" class="sidenav">
        <a id="homeLogo" href="@Url.Action("TestsList", "Test")"><img id="unikeyLogo" src="~/Content/ICONS/unikeyLogo.png" alt="UnikeyLogo"></a>
        <a title="Manage tests" onclick="showLoadingSpinner()" href='@Url.Action("TestsList", "Test", new {PageNumber = 1, PageSize = 10})'><img id="manage" class="sidebarIcon" src="~/Content/ICONS/manageIcon.png" alt="manage"></a>
        <a title="Tests results" onclick="showLoadingSpinner()" href='@Url.Action("AdministratedTestsList", "ExTest")'><img id="results" class="sidebarIcon" src="~/Content/ICONS/results.png" alt="results"></a>
        <a title="Log out" href='@Url.Action("Logout", "User")'><img id="logOut" class="sidebarIcon" src="~/Content/ICONS/logOut.png" alt="logOut"></a>
    </div>
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@*@Scripts.Render("~/bundles/jquery")*@
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
